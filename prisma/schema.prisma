generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Donator {
  id String @id @default(uuid())

  name    String
  email   String
  phone   String
  address String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  donations Donation[]
}

model Donation {
  id String @id @default(uuid())

  donator   Donator @relation(fields: [donatorId], references: [id])
  donatorId String

  caller   Worker? @relation("caller", fields: [callerId], references: [id])
  callerId String? @default(uuid())

  courier   Worker? @relation("courier", fields: [courierId], references: [id])
  courierId String? @default(uuid())

  amount Float
  date   DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

}

model Worker {
  id String @id @default(uuid())

  name    String
  email   String
  phone   String
  address String
  role    Role   @default(CALLER)

  calledDonations  Donation[] @relation("caller")
  courierDonations Donation[] @relation("courier")

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

enum Role {
  CALLER
  COURIER
}
